@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model MusicStore_F17.Models.Genre

<h2>Albums for genre: @ViewBag.Genre</h2>

<table class="table table-striped table-hover">
    <tr>
        <th>Title</th>
        <th>Price</th>
        <th>Artist</th>
    </tr>
    @foreach (var a in Model.Albums)
    {
        <tr>
            <td>@a.Title</td>
            <td>@a.Artist.Name</td>
            <td>@String.Format("{0:c}", a.Price)</td>
        </tr>
    }
</table>